{
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true, // Per endpoint checks requests
    "StackBlockedRequests": false, // Means blocked requests will dropped and not queued
    "RealIpHeader": "X-Real-IP", // Specify the header that contains the real IP when behind a proxy or load balancer.
    "ClientIdHeader": "X-ClientId", // Specify the header that contains the client ID if you are rate limiting based on client IDs.
    "HttpStatusCode": 429, // 429 Too Many Requests
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "*",
        "Period": "1d",
        "Limit": 2000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "127.0.0.1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1s",
            "Limit": 10
          }
        ]
      }
    ]
  }
}